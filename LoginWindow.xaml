<Window x:Class="Sikul.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="250" Width="300"
        Icon="Images/sikul.png">
    <StackPanel Margin="20">
        <TextBlock Text="Username:" />
        <TextBox x:Name="UsernameTextBox" Margin="0,0,0,10" />
        <TextBlock Text="Password:" />
        <PasswordBox x:Name="PasswordTextBox" Margin="0,0,0,10" />
        <Button Content="Login" Click="LoginButton_Click" Margin="0,0,0,10" />
        <Button Content="View Previous Reports" Click="ViewReportsButton_Click"/>
    </StackPanel>
</Window>